<%-include('header.ejs')%>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Update Customer Details</h4>
           
            <form method="post" action="/update-cutomer/<%-cust.id%>">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="mb-2" >Vendor Name* : </label>
                        <input type="text" required class="form-control" value="<%-cust.name%>"  name="name" placeholder="Customer Name">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="mb-2" >Contact No.* : </label>
                        <input type="number" required class="form-control" value="<%-cust.mobile%>"  name="mobile" placeholder="Contact No.">
                    </div>
                </div>
          
            
            
            
              
           
              <button  class="btn btn-primary mb-2">Update Customer</button>
            </form>
          </div>
        </div>
      </div>
</div>
<%-include('footer.ejs')%>